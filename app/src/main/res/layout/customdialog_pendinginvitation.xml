<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="370dp">

    <TextView
        android:id="@+id/tvCpiHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending Invitations"
        android:textColor="@color/white"
        android:textSize="@dimen/custom_list_heading_text_size"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/tvCpiHeading"/>

    <Button
        android:id="@+id/btnCpiOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:text="Ok"
        android:textColor="@color/white"
        android:textSize="@dimen/custom_list_content_text_size"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>