<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvAtrThreadName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/tvAtrTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etAtrChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAtrThreadName"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_recyclerview_channelname"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="11sp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:editable="false"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAtrMemberPic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvAtrThreadName"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>