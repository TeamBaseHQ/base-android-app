<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tvCdcmHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove ?"
        android:textColor="@color/white"
        android:textSize="@dimen/custom_list_heading_text_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCdcmOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:text="Ok"
            android:textColor="@color/white"
            android:textSize="@dimen/custom_list_content_text_size"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="-10dp"/>

        <Button
            android:id="@+id/btnCdcmCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Cancel"
            android:textColor="#ABADCD"
            android:textSize="@dimen/custom_list_content_text_size"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="-10dp"/>

    </LinearLayout>

</RelativeLayout>